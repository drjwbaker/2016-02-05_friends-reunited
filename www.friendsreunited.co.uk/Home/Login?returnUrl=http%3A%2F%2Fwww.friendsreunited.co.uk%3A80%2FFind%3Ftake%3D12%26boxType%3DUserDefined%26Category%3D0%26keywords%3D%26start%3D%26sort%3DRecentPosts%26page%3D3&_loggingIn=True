<script type="text/javascript">
    FR.Load(function () {
        var result = '2016';
        for (var i = result - 18; i >= result - 120; i--) {
            $('#Birthyear').append($("<option/>", { value: i, text: i }));
        }

        var validator = $("#splashSignUpForm").bind("invalid-form.validate", function () {
            $("#registerErrorPanel").html("You must fill in all fields and agree to our terms and conditions.");
        }).validate({
            onfocusout: false,
            onkeyup: false,
            onclick: false,
            errorElement: "li",
            errorContainer: $("#registerErrorPanel"),
            errorPlacement: function (error, element) {
                $('#registerErrorPanel').show();
            },
            rules: {
                Forename: {
                    required: true,
                    minlength: 2,
                    maxlength: 20
                },
                Surname: {
                    required: true,
                    minlength: 2,
                    maxlength: 20
                },
                Email: {
                    required: true,
                    email: true,
                    pattern: /^((?!mailinator).)*$/
                },
                Password: {
                    required: true,
                    minlength: 6
                },
                Birthyear: {
                    required: true
                },
                Gender: {
                    required: true
                },
                Terms: {
                    required: true
                }
            }
        });

        $('#btnSignUpBtn').on('click', function () {
            if ($("#splashSignUpForm").valid() == true) {
                if ($('#btnSignUpBtn').hasClass('wait')) {
                    return false;
                }
                $(this).addClass('wait');
                $('.fb-button').addClass('hide');
            }
        });
    });
</script>  
