<script type="text/javascript">
    FR.Load(function() {
        FR.Util.AttachInlineCount($('.Text'), { count: 5000, expandable: true });

        $('#send-button').on("click", function() {
            if (!$('#contact-form').valid()) {
                $('#errorPanelWrapper').show();
            }
        });

        $('#Subject').autocomplete({
            source: function(request) {
                FR.Data.Post(FR.UrlHelper.Urls.HomeFaqs, { dataType: 'html' }, { queryText: request.term }, function(result) {
                    if (result.length > 0) {
                        $('#suggestions-row').show();
                        $('#Suggestions').html(result);
                    }
                }, function() {
                    //TODO: Do we need to handle this error?
                });
            }
        });
    });
</script>
